@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Categories List</h2>
        </div>
     
        <div class="col-6 text-end">
            <a asp-action="Create" asp-controller="Category" class="btn btn-primary"><i class="bi bi-plus-circle-fill"></i> &nbsp; Create new category</a>
        </div>

    </div>


<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            

        </tr>
    </thead>
    <tbody>
        @foreach(var cat in Model)
        {
            <tr>
                
                <td>@cat.Name</td>
                <td>@cat.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-action="Edit" asp-controller="Category" asp-route-id="@cat.Id">Edit</a>
                        &nbsp;
                        &nbsp;
                        <a asp-action="Delete" asp-controller="Category" asp-route-id="@cat.Id">Delete</a>

                    </div>
                </td>


            </tr>
        }
    </tbody>

</table>

</div>
